

<div class="left">
  <div class='regNums'>
   <form action="/registration-number" method="POST">
     <label class='regLab' for="plateNum">Registration Number:</label>
    
  
     <div class='block'>

       <input class='number' type="text" name='numberPlate'maxlength='10' placeholder="CA 123-456"></div>
     
     <div class='add'><button>Add <i class="fas fa-plus fa-1x"></i></button></div>   
   </form>
   <form action="/reset" method="POST"><div class='reset'><button>Reset <i class='fas fa-trash-alt'></i></button></div></form>
     </div>
   
   <div class='bottom'>
     {{#each allPlates}}
  <div class='plates'><h2>{{registration}}</h2><form action="delete/{{registration}}" method="POST"><div class='delete'><button>Delete</button></div></form></div>
   {{/each}}

</div>
  </div>
<div class="right">
  
  <div class='citybox'>
  <h1>Add City</h1>
  <br>
  
<div>
  <form action="#" method="POST">
    
    <label for="citycode"><h2>Code:</h2></label>
    <div class='citycode'><input type="text" name='citycode' minlength='2' maxlength="3"></div>
    
    <label for="city"><h2>City:</h2></label>
    <div class='city'><input type="text" name='city' class='code'></div>
    
    <div class='btn'><input type="submit"></div>
    
  </form>
    </div>

</div>
<div class='filterbox'>
  <h1>Filter</h1>
  <br>
  
<label for="location"><h2>Location:</h2></label>

<form action="/location" method="POST">
  <select name="location">
    <option value=>All</option>
    <option value="CA">Cape Town</option>
    <option value="CJ">Bellville</option>
    <option value="Paarl">Paarl</option>
    <option value="Oudtshoorn">Oudtshoorn</option>
  </select>
    <input type="submit" value='GO!'>
  </form>


  </div>
</div>


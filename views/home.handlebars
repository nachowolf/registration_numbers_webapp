

<div class="left">
  <div class='regNums'>
   <form action="/registration-number" method="POST">
     <label class='regLab' for="plateNum">Registration Number:</label>
    
  
     <div class='block'>

       <input class='number' type="text" name='numberPlate'maxlength='15' placeholder="CA 123-456"></div>
       <div>{{#if messages.error}}
         <div class='error'>
                       <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
           <h3>{{messages.error}}</h3>

         </div>{{/if}}
       </div>
     
     <div class='add'><button>Add <i class="fas fa-plus fa-1x"></i></button></div>   
   </form>
   <form action="/reset" method="POST"><div class='reset'><button>Reset <i class='fas fa-trash-alt'></i></button></div></form>
     </div>
   
   <div class='bottom'>
     {{#each allPlates}}
  <div class='plates'><h2>{{registration}}</h2><form action="delete/{{registration}}" method="POST"><div class='delete'><button>Delete</button></div></form></div>
   {{/each}}

</div>
  </div>
<div class="right">
  
<div class='filterbox'>
  <h1>Filter</h1>
  <br>
  
<label for="location"><h2>Location:</h2></label>

<form action="/location" method="POST">
  <select name="location" onchange='this.form.submit()' >
    <option value="All">All</option>
    {{#each filterList}} 
    <option value="{{code}}" name='locations' {{selector}}>{{city}}</option>
    {{/each}}
    {{selector}} 
  </select>
    <noscript><input type="submit"></noscript>
  </form>


  </div>

  <div class='reg-list'>
    <h1>Western Cape Registration Codes </h1>
    <div class='city-list'>
      <table>
        <thead>
        <tr>
          <th><div class='header'>Code</div></th>
          <th> <div class='header'>Location</div></th>
        </tr>
        </thead>
        <tbody>
       {{#each allCities}}
       <tr>
      <td>{{code}}</td>
      <td>{{city}}</td>
      </tr>
       {{/each}}
       </tbody>
       </table>

    </div>
  </div>
</div>

